{
  "name": "file-focus",
  "displayName": "File Focus",
  "icon": "images/icon.PNG",
  "description": "Simplify workspace file and folder navigation. Organise the files and folders related to a specific task inside focus groups for easy access and navigation. ",
  "version": "0.0.3",
  "publisher": "herdingbits",
  "repository": "https://github.com/quicken/filefocus",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "virtual folder",
    "group files",
    "focus group",
    "active folders"
  ],
  "galleryBanner": {
    "color": "#414F6A",
    "theme": "dark"
  },
  "preview": true,
  "activationEvents": [
    "onView:fileFocusTree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileFocusTree.refreshEntry",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "menuViewController.addGroup",
        "title": "Add Focus Group",
        "icon": "$(new-folder)"
      },
      {
        "command": "menuViewController.removeGroup",
        "title": "Delete Focus Group",
        "icon": "$(trash)"
      },
      {
        "command": "menuViewController.renameGroup",
        "title": "Rename Focus Group",
        "icon": "$(edit)"
      },
      {
        "command": "menuViewController.addGroupResource",
        "title": "Add to Focus Group",
        "icon": "$(tag-add)"
      },
      {
        "command": "menuViewController.removeGroupResource",
        "title": "Remove from Focus Group",
        "icon": "$(remove-close)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fileFocusTree",
          "name": "File Focus"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "menuViewController.addGroup",
          "when": "view == fileFocusTree",
          "group": "navigation"
        },
        {
          "command": "fileFocusTree.refreshEntry",
          "when": "view == fileFocusTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "menuViewController.renameGroup",
          "when": "view == fileFocusTree && viewItem == GroupItem",
          "group": "inline"
        },
        {
          "command": "menuViewController.removeGroup",
          "when": "view == fileFocusTree && viewItem == GroupItem",
          "group": "inline"
        },
        {
          "command": "menuViewController.removeGroupResource",
          "when": "view == fileFocusTree && viewItem == FocusRootItem",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "menuViewController.addGroupResource",
          "group": "z_commands"
        }
      ],
      "editor/title/context": [
        {
          "command": "menuViewController.addGroupResource",
          "group": "z_commands"
        }
      ],
      "editor/context": [
        {
          "command": "menuViewController.addGroupResource",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "uuid": "^8.3.2",
    "vscode-uri": "^3.0.3"
  }
}
